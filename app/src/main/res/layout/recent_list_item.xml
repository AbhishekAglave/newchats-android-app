<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recent_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/recentItem"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            >

            <ImageView
                android:id="@+id/profile_pic_holder"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_margin="5dp"
                android:contentDescription="profile_pic"
                android:src="@drawable/no_profile_picture_15254" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/number_holder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="918530080493"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/msg_holder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hello"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

</LinearLayout>